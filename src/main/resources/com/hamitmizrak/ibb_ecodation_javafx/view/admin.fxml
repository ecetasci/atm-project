<?xml version="1.0" encoding="UTF-8"?>

<!-- Ana konteyner olan admiin rayüz sayfası -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hamitmizrak.ibb_ecodation_javafx.controller.AdminController">
    <children>
        <!--Dikey düzenlenme için VBOX tablo içeriğin kullanalım-->
        <!--
             JavaFX’te VBox, bir layout (yerleşim) yöneticisidir. Yani sahnedeki bileşenlerin (button, label, textfield vb.)
             nasıl konumlandırılacağını belirleyen bir konteynerdir.
             VBox özel olarak bileşenleri dikey (vertical) olarak yerleştirir.
             Her yeni bileşen, bir öncekinin altına gelecek şekilde sıralanır.
        -->
        <VBox  spacing="10" layoutX="10" layoutY="10" style="-fx-padding: 1;" stylesheets="@css/styles.css">

            <!-- Arama ve filtereleme Alanı -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Ara ... örneğin:ad,soyad,eposta,rol" />
                <ComboBox fx:id="filterRoleComboBox" promptText="Rol Filtreleme" />
                <Button text="Filtrelemeyi Temizle" onAction="#clearFilters"/>
            </HBox>

            <!--Kullanıcı Bilgilerini Göstermek için tablo-->
            <TableView fx:id="userTable">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="usernameColumn" text="Kullanıcı Adı"/>
                    <TableColumn fx:id="emailColumn" text="Email Adres"/>
                    <TableColumn fx:id="passwordColumn" text="Şifre"/>
                </columns>
            </TableView>

            <!--Sayfa Açılır açılmaz ComboBox(DropdownList)
            <HBox spacing="10">
                <ComboBox fx:id="roleComboBox" prefWidth="200"/>
            </HBox>-->

            <!--Butonları Yatay olarak düzenlenmesini için-->
            <HBox spacing="10">
                <Button text="Kullanıcı Ekle" onAction="#addUser" />
                <Button text="Kullanıcı Güncelle" onAction="#updateUser" />
                <Button text="Kullanıcı Sil" onAction="#deleteUser" />
            </HBox>

            <!--Butonları Yatay olarak düzenlenmesini için-->
            <HBox spacing="10">
                <Button text="Tabloyu Yenile" onAction="#refleshTable" />
                <Button text="Çıkış Yap" onAction="#logout" />
            </HBox>

            <HBox spacing="10">
                <Button text="Yazdır" onAction="#printTable" />
                <Button text="Hesap Makinesi" onAction="#openCalculator" />
                <Button text="KDV Hesapla" onAction="#kdvCalculator" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>

